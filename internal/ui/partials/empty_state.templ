package partials

import "github.com/drywaters/learnd/internal/ui/components"

templ EmptyState(show bool, swapOOB bool) {
	if show {
		<div
			id="empty-state"
			class="p-8 text-center"
			style="color: var(--color-ink-lighter);"
			if swapOOB {
				hx-swap-oob="true"
			}
		>
			@components.BookIcon()
			<p class="text-sm">No entries yet. Start capturing!</p>
		</div>
	} else {
		<div
			id="empty-state"
			if swapOOB {
				hx-swap-oob="true"
			}
		></div>
	}
}
